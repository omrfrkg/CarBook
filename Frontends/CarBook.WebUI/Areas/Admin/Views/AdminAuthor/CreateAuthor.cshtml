@model CreateAuthorDto
@{
	ViewData["Title"] = "CreateAuthor";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Yazar Bilgisi Girişi</h4>
						<p class="card-subtitle mb-4">Yazar alanına veri girişini aşağıdaki panelden yapabilirsiniz.</p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputAuthorName">Ad Soyad</label>
								<input type="text" class="form-control" id="exampleInputName" placeholder="Yazar Adını Giriniz" asp-for="AuthorName">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<input type="text" class="form-control" id="exampleInputDescription" placeholder="Açıklamayı Giriniz" asp-for="Description">
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Yazar Görsel</label>
								<input type="text" class="form-control" id="exampleInputImageUrl" placeholder="Yazar Görsel Url Bilgisini Giriniz" asp-for="ImageUrl">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

