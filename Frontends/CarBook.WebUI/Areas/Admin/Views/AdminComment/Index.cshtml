@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yorum Listesi - BlogId : @ViewBag.id </h4>
						<p class="card-subtitle mb-4">
							Bloglarla ilgili o bloğa yapılmış olan yorum listesini bu sayfadan görebilirsiniz. İlgili yorumları kaldırabilir ya da tekrar aktif hale getirebilirsiniz. Bunun için yorumların altında yer alan butonları kullanabilirsiniz.
						</p>
						<div class="table-responsive">

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


