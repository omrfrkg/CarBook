@model List<ResultServiceDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
	int maxServiceCount = 4; // Hizmet sayısı sınırı

	foreach (var item in Model)
	{
		maxServiceCount--;
	}
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Hizmet Bilgileri Alanı</h4>
						<p class="card-subtitle mb-4">
							Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemleri aşağıdaki sayfadan gerçekleştirebilirsiniz. Tema bütünlüğü korumak adına 4 tane hizmet girişi yapınız.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Başlık</th>
										<th>Açıklama</th>
										<th>Icon Url</th>
										<th>Sil</th>
										<th>Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.IconUrl</td>
											<td><a href="/Admin/AdminService/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Admin/AdminService/UpdateService/@item.ServiceId" class="btn btn-outline-success">Güncelle</a></td>
										</tr>
									}
								</tbody>
							</table>
							@if (maxServiceCount <= 0)
							{
								<a href="/Admin/AdminService/CreateService" class="btn btn-outline-primary disabled" aria-disabled="true">Yeni Hizmet Girişi</a>
							}
							else
							{
								<a href="/Admin/AdminService/CreateService" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
