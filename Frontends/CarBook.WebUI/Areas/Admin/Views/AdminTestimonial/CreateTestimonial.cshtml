@model CreateTestimonialDto
@{
	ViewData["Title"] = "CreateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Referans Sayfası Veri Girişi Alanı</h4>
						<p class="card-subtitle mb-4">
							Referans ekleme işleminin yapıldığı sayfamızdır. Bilgileri eksiksiz olarak doldurup kaydet butonuna tıklamanız yeterlidir.
						</p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputLocationName">Referans Ad Soyad</label>
								<input type="text" class="form-control" id="exampleInputLocationName" placeholder="Referans Adı Soyadını Giriniz" asp-for="Name">
							</div>
							<div class="form-group">
								<label for="exampleInputLocationTitle">Referans Unvanı</label>
								<input type="text" class="form-control" id="exampleInputLocationTitle" placeholder="Referans Unvanını Giriniz" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="exampleInputLocationImageUrl">Referans Görsel</label>
								<input type="text" class="form-control" id="exampleInputLocationImageUrl" placeholder="Görsel Seçiniz" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="exampleInputLocationComment">Referans Yorumu</label>
								<textarea rows="5" class="form-control" id="exampleInputLocationComment" placeholder="Yorumunuzu Buraya Yazabilirsiniz" asp-for="Comment"></textarea>
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

