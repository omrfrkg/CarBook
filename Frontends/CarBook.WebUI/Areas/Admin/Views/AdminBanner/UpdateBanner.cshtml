@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Araç Özelliği Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Banner alanına veri girşini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olmaması adına sadece banner alanını güncelleyebilirsiniz.</p>

						<form method="post">
							<input type="hidden" asp-for="BannerID" />
							<div class="form-group">
								<label for="exampleInputTitle">Başlık</label>
								<input type="text" class="form-control" id="exampleInputTitle" placeholder="Başlık Girişi Yapınız" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<input type="text" class="form-control" id="exampleInputDescription" placeholder="Açıklama Girişi Yapınız" asp-for="Description">
							</div>
							<div class="form-group">
								<label for="exampleInputVideoDescription">Video Açıklama</label>
								<input type="text" class="form-control" id="exampleInputVideoDescription" placeholder="Videonun Açıklamasının Girişi Yapınız" asp-for="VideoDescription">
							</div>
							<div class="form-group">
								<label for="exampleInputVideoURL">Video Url</label>
								<input type="text" class="form-control" id="exampleInputVideoURL" placeholder="VideoUrl Girişi Yapınız" asp-for="VideoUrl">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgilerini Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
