@model CreateReservationDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Index.cshtml";
	var isSuccess = TempData["Success"] != null && (bool)TempData["Success"];
}

<div class="col-md-12 block-9 mb-md-5">
	<form class="bg-light p-5 contact-form" method="post">
		<h3 class="alert alert-success">Araç Rezervasyon Formu</h3>
		<br />
		<div class="form-group">
			<input type="hidden" asp-for="CarId" value="@ViewBag.carId" class="form-control">
		</div>
		<div class="form-group">
			<input type="text" asp-for="Name" class="form-control" placeholder="Adınız">
		</div>
		<div class="form-group">
			<input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız">
		</div>
		<div class="form-group">
			<input type="text" asp-for="Age" class="form-control" placeholder="Yaşınız">
		</div>
		<div class="form-group">
			<input type="text" asp-for="DriverLicenceYear" class="form-control" placeholder="Ehliyet Yılınız">
		</div>
		<div class="form-group">
			<input type="text" asp-for="Email" class="form-control" placeholder="Mail Adresiniz">
		</div>
		<div class="form-group">
			<input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numaranız">
		</div>
		<div class="form-group">
			<select class="form-control" asp-for="PickUpLocationId" asp-items="@ViewBag.location">
				<option disabled selected>Lütfen Alış Lokasyonunu Seçiniz</option>
			</select>
		</div>
		<div class="form-group">
			<select class="form-control" asp-for="DropOffLocationId" asp-items="@ViewBag.location">
				<option disabled selected>Lütfen Teslim Lokasyonunu Seçiniz</option>
			</select>
		</div>
		<div class="form-group">
			<textarea asp-for="Description" id="" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
		</div>
		<div class="form-group">
			<input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
		</div>
	</form>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="successModalLabel">Başarılı</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Araç Kiralama Talebiniz Başarıyla Oluşturuldu. En Kısa Süre İçerisinde Talebiniz Değerlendirilip Tarafınıza Mail Aracılığıyla Bilgilendirme Yapılacaktır.
			</div>
			<div class="modal-footer">
				<a href="@Url.Action("Index", "Default")" class="btn btn-primary">Tamam</a>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
		@if (isSuccess)
		{
			<text>
					$('#successModal').modal('show');
			</text>
		}
		});
	</script>
}
