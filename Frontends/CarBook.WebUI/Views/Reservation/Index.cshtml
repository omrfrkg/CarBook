@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form">
        <div class="form-group">
            <label>Kiralamak İstediğiniz Araç</label>
            <input type="text" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Ehliyet Yılınız</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Mail Adresiniz</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Telefon Numaranız</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Aracı Teslim Alacağınız Lokasyon</label>
            @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Aracı İade Edeceğiniz Lokasyon</label>
            @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Varsa Eklemek İstedikleriniz</label>
            <textarea name="" id="" cols="30" rows="7" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>
</div>

