@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Marka Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Marka ile ilgili özellikleri aşağıdaki kutucuğa girebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

						<form method="post">
							<input type="hidden" asp-for="BrandId" />
							<div class="form-group">
								<label for="exampleInputBrand">Marka Adı</label>
								<input type="text" class="form-control" id="exampleInputBrand" placeholder="Marka Adı Girişi Yapınız" asp-for="Name">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Kaydet</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

