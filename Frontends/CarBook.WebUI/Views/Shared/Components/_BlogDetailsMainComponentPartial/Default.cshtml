@model GetBlogByIdDto
<div class="col-md-8 ftco-animate">

	<h2 class="mb-3">@Model.Title</h2>
	<p>
		@Model.Description
	</p>
	<p>
		<img src="@Model.CoverImageUrl" alt="" class="img-fluid">
	</p>


	<!--BlogDetailCloudTagByBlog Start-->
	@await Component.InvokeAsync("_BlogDetailCloudTagByBlogComponentPartial",new {id = ViewBag.blogId})
	<!--BlogDetailCloudTagByBlog End

	<!--BlogDetailsAuthorAbout Start-->
	@await Component.InvokeAsync("_BlogDetailsAuthorAboutComponentPartial", new { id = ViewBag.blogId })
	<!--BlogDetailsAuthorAbout Start-->

	<div class="pt-5 mt-5">
		<h3 class="mb-5">6 Yorum</h3>

		<!--CommentListByBlog Start-->
		@await Component.InvokeAsync("_CommentListByBlogComponentPartial")
		<!--CommentListByBlog Start-->

		<!--AddComment Start-->
		@await Component.InvokeAsync("_AddCommentComponentPartial")
		<!--AddComment Start-->


	</div>

</div>
